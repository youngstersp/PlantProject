<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Plants Tracker</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Indoor Plants Tracker</h1>

        <!-- Weather Display -->
        <div class="weather-info">
            <h2>Current Weather in College Park</h2>
            <p>Temperature: <%= weather.main.temp %>°C</p>
            <p>Humidity: <%= weather.main.humidity %>%</p>
            <p>Feels Like: <%= weather.main.feels_like%>°C</p>
        </div>

        <!-- Plant List -->
        <div class="plant-list">
            <h2>My Plants</h2>
            <% plants.forEach(function(plant) { %>
                <div class="plant-card">
                    <h3><%= plant.name %></h3>
                    <p>Species: <%= plant.species %></p>
                    <p>Ideal Temperature: <%= plant.idealTemp %>°C</p>
                </div>
            <% }); %>
        </div>

        <!-- Add Plant Form -->
        <div class="add-plant-form">
            <h2>Add New Plant</h2>
            <form action="/add-plant" method="POST">
                <input type="text" name="name" placeholder="Plant Name" required>
                <input type="text" name="species" placeholder="Species" required>
                <input type="text" name="location" placeholder="Location in Home" required>
                <input type="number" name="idealTemp" placeholder="Ideal Temp" required><br>
                <button type="submit">Add Plant</button>
            </form>
        </div>
    </div>
</body>
</html>